{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://schema.opencrypto.io/models/exchange#",
  "title": "Exchange",
  "description": "Exchange run or developed by the project.",
  "type": "object",
  "required": [
    "name"
  ],
  "properties": {
    "id": {
      "title": "ID",
      "description": "Unique identifier (to be written in small letters - for internal usage only).",
      "type": "string"
    },
    "name": {
      "title": "Name",
      "description": "Name of the exchange.",
      "type": "string"
    },
    "countries": {
      "title": "Countries",
      "description": "Country where the exchange is situated.",
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^(\\w){2}$"
      }
    },
    "web": {
      "title": "Web links",
      "description": "Webpages links.",
      "type": "array",
      "items": {
        "type": "string",
        "format": "url"
      }
    },
    "api": {
      "url": {
        "title": "Web links",
        "description": "Webpages links.",
        "type": "array",
        "items": {
          "type": "string",
          "format": "url"
        }
      }
    },
    "images": {
      "title": "Images",
      "desctiption": "Images of the logo.",
      "type": "object",
      "opencrypto-weight": 1,
      "opencrypto-generated": true,
      "properties": {
        "logo_square": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "data": {
              "type": "string",
              "media": {
                "binaryEncoding": "base64"
              }
            }
          }
        },
        "logo_full": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "data": {
              "type": "string",
              "media": {
                "binaryEncoding": "base64"
              }
            }
          }
        }
      }
    },
    "markets": {
      "type": "array",
      "items": {
        "$ref": "opencrypto:market#"
      }
    }
  }
}