{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://schema.opencrypto.io/models/project#",
  "title": "Project",
  "description": "Cryptocurrency project",
  "type": "object",
  "required": [
    "name"
  ],
  "properties": {
    "id": {
      "title": "ID",
      "type": "string",
      "opencrypto-generated": true
    },
    "name": {
      "title": "Name",
      "type": "string"
    },
    "start_date": {
      "title": "Start Date",
      "description": "The day when the project began to be first published.",
      "type": "string",
      "format": "date"
    },
    "web": {
      "title": "Web links",
      "description": "Webpages links.",
      "type": "array",
      "items": {
        "type": "string",
        "format": "url"
      }
    },
    "assets": {
      "type": "array",
      "items": {
        "$schema": "http://json-schema.org/draft-06/schema#",
        "$id": "https://schema.opencrypto.io/models/asset#",
        "title": "Asset",
        "description": "Cryptocurrency - digital asset (blockchain or token).",
        "type": "object",
        "required": [
          "name",
          "type"
        ],
        "properties": {
          "id": {
            "title": "ID",
            "description": "Unique identifier.",
            "type": "string"
          },
          "type": {
            "title": "Type",
            "description": "Type of asset, eq. blockchain or token.",
            "type": "string",
            "enum": [
              "blockchain",
              "token"
            ]
          },
          "name": {
            "title": "Name",
            "description": "Official name.",
            "type": "string"
          },
          "symbol": {
            "title": "Symbol",
            "description": "Three or four letter symbol.",
            "type": "string"
          },
          "token_properties": {
            "type": "object",
            "title": "Token properties",
            "required": [
              "platform"
            ],
            "properties": {
              "platform": {
                "type": "string"
              },
              "contract_address": {
                "type": "string"
              },
              "decimals": {
                "type": "number"
              }
            }
          },
          "networks": {
            "title": "Networks",
            "type": "array",
            "items": {
              "$schema": "http://json-schema.org/draft-06/schema#",
              "$id": "https://schema.opencrypto.io/models/network#",
              "title": "Network",
              "description": "Ledger (blockchain) of digital asset.",
              "type": "object",
              "properties": {
                "id": {
                  "title": "ID",
                  "type": "string"
                },
                "name": {
                  "title": "Name",
                  "type": "string"
                },
                "type": {
                  "title": "Type",
                  "description": "Type of Network",
                  "type": "string",
                  "enum": [
                    "main",
                    "test"
                  ]
                },
                "proof_type": {
                  "title": "Proof Type",
                  "type": "string"
                },
                "algorithm": {
                  "type": "string"
                },
                "mineable": {
                  "type": "boolean"
                },
                "target_block_time": {
                  "title": "Target block time (in seconds)",
                  "type": "number"
                },
                "maximum_block_size": {
                  "title": "Maximum block size (in bytes)",
                  "type": "number"
                },
                "web": {
                  "title": "Web links",
                  "description": "Webpages links.",
                  "type": "array",
                  "items": {
                    "type": "string",
                    "format": "url"
                  }
                },
                "tools": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "title": {
                        "type": "string"
                      },
                      "type": {
                        "type": "string",
                        "enum": [
                          "explorer",
                          "faucet",
                          "other"
                        ]
                      },
                      "url": {
                        "type": "string",
                        "format": "url"
                      }
                    }
                  }
                },
                "images": {
                  "type": "object",
                  "opencrypto-generated": true,
                  "properties": {
                    "logo_square": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string"
                        },
                        "data": {
                          "type": "string",
                          "media": {
                            "binaryEncoding": "base64"
                          }
                        }
                      }
                    },
                    "logo_full": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string"
                        },
                        "data": {
                          "type": "string",
                          "media": {
                            "binaryEncoding": "base64"
                          }
                        }
                      }
                    }
                  }
                },
                "webids": {
                  "type": "object",
                  "opencrypto-validation": "webid",
                  "patternProperties": {
                    "^[a-z0-9-]{2,20}(\\/[a-z0-9-]{2,20})?$": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "max_supply": {
            "type": "number"
          },
          "first_distribution": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "amount": {
                  "type": "number"
                }
              }
            }
          },
          "ico_properties": {
            "type": "object",
            "properties": {
              "start_date": {
                "type": "string",
                "format": "date"
              },
              "end_date": {
                "type": "string",
                "format": "date"
              },
              "total_cap": {
                "type": "number"
              },
              "ico_price": {
                "type": "string",
                "pattern": "^[0-9-\\.]+ [A-Z0-9]{2,4}$"
              },
              "raised": {
                "type": "string",
                "pattern": "^[0-9-\\.]+ [A-Z0-9]{2,4}$"
              },
              "country": {
                "type": "string"
              }
            }
          },
          "denominations": {
            "title": "Denominations",
            "description": "Units and subunits of the asset amount.",
            "type": "object",
            "properties": {
              "plural": {
                "type": "string"
              },
              "symbol": {
                "type": "string"
              },
              "subunits": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "unit": {
                      "type": "number"
                    },
                    "name": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "start_date": {
            "title": "Start Date",
            "description": "The day when the assets began to be first activated.",
            "type": "string",
            "format": "date"
          },
          "web": {
            "title": "Web links",
            "description": "Webpages links.",
            "type": "array",
            "items": {
              "type": "string",
              "format": "url"
            }
          },
          "team": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "role": {
                  "type": "string"
                },
                "webids": {
                  "type": "object",
                  "opencrypto-validation": "webid",
                  "patternProperties": {
                    "^[a-z0-9-]{2,20}(\\/[a-z0-9-]{2,20})?$": {
                      "type": "string"
                    }
                  }
                },
                "photo": {
                  "type": "string",
                  "format": "url"
                }
              }
            }
          },
          "team_url": {
            "type": "string",
            "format": "url"
          },
          "whitepapers": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "url": {
                  "type": "string",
                  "format": "url"
                }
              }
            }
          },
          "history": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "date": {
                  "type": "string",
                  "format": "date"
                },
                "title": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "url": {
                  "type": "string",
                  "format": "url"
                }
              }
            }
          },
          "images": {
            "type": "object",
            "opencrypto-generated": true,
            "properties": {
              "logo_square": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string"
                  },
                  "data": {
                    "type": "string",
                    "media": {
                      "binaryEncoding": "base64"
                    }
                  }
                }
              },
              "logo_full": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string"
                  },
                  "data": {
                    "type": "string",
                    "media": {
                      "binaryEncoding": "base64"
                    }
                  }
                }
              }
            }
          },
          "webids": {
            "type": "object",
            "opencrypto-validation": "webid",
            "patternProperties": {
              "^[a-z0-9-]{2,20}(\\/[a-z0-9-]{2,20})?$": {
                "type": "string"
              }
            }
          },
          "resources": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "url": {
                  "type": "string",
                  "format": "url"
                }
              }
            }
          },
          "partners": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "url": {
                  "type": "string",
                  "format": "url"
                }
              }
            }
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^[a-z0-9-]+(:[a-z0-9-]+)?$"
            }
          },
          "rt_data": {
            "type": "object",
            "opencrypto-generated": true,
            "properties": {
              "price": {
                "type": "object",
                "properties": {
                  "usd": {
                    "type": "number"
                  },
                  "btc": {
                    "type": "number"
                  }
                }
              },
              "prices": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "value": {
                      "type": "number"
                    },
                    "bid": {
                      "type": "number"
                    },
                    "ask": {
                      "type": "number"
                    },
                    "base": {
                      "type": "string"
                    },
                    "source": {
                      "type": "string"
                    },
                    "time": {
                      "type": "string"
                    }
                  }
                }
              },
              "marketcap": {
                "type": "object",
                "properties": {
                  "usd": {
                    "type": "number"
                  },
                  "btc": {
                    "type": "number"
                  }
                }
              },
              "marketcaps": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "value": {
                      "type": "number"
                    },
                    "base": {
                      "type": "string"
                    },
                    "source": {
                      "type": "string"
                    },
                    "time": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "exchanges": {
      "type": "array",
      "items": {
        "$schema": "http://json-schema.org/draft-06/schema#",
        "$id": "https://schema.opencrypto.io/models/exchange#",
        "title": "Exchange",
        "type": "object",
        "required": [
          "name"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "title": "Name",
            "type": "string"
          },
          "countries": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^(\\w){2}$"
            }
          },
          "web": {
            "title": "Web links",
            "description": "Webpages links.",
            "type": "array",
            "items": {
              "type": "string",
              "format": "url"
            }
          },
          "api": {
            "url": {
              "title": "Web links",
              "description": "Webpages links.",
              "type": "array",
              "items": {
                "type": "string",
                "format": "url"
              }
            }
          },
          "images": {
            "type": "object",
            "opencrypto-generated": true,
            "properties": {
              "logo_square": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string"
                  },
                  "data": {
                    "type": "string",
                    "media": {
                      "binaryEncoding": "base64"
                    }
                  }
                }
              },
              "logo_full": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string"
                  },
                  "data": {
                    "type": "string",
                    "media": {
                      "binaryEncoding": "base64"
                    }
                  }
                }
              }
            }
          },
          "markets": {
            "type": "array",
            "items": {
              "$ref": "opencrypto:market#"
            }
          }
        }
      }
    },
    "clients": {
      "type": "array",
      "items": {
        "$schema": "http://json-schema.org/draft-06/schema#",
        "$id": "https://schema.opencrypto.io/models/client#",
        "title": "Client",
        "description": "Client for digital asset. It can be full-node or thin client in form of wallet.",
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "title": "ID",
            "description": "Unique identifier of the digital asset client."
          },
          "name": {
            "title": "Name",
            "type": "string",
            "description": "Name of client."
          }
        }
      }
    },
    "team": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "role": {
            "type": "string"
          },
          "webids": {
            "type": "object",
            "opencrypto-validation": "webid",
            "patternProperties": {
              "^[a-z0-9-]{2,20}(\\/[a-z0-9-]{2,20})?$": {
                "type": "string"
              }
            }
          },
          "photo": {
            "type": "string",
            "format": "url"
          }
        }
      }
    },
    "team_url": {
      "type": "string",
      "format": "url"
    },
    "contacts": {
      "type": "object",
      "patternProperties": {
        "^email(:.+)?$": {
          "type": "string",
          "format": "email"
        },
        "^phone(:.+)?$": {
          "type": "string"
        },
        "^location(:.+)?$": {
          "type": "string"
        }
      }
    },
    "whitepapers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "url"
          }
        }
      }
    },
    "history": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "url"
          }
        }
      }
    },
    "images": {
      "type": "object",
      "opencrypto-generated": true,
      "properties": {
        "logo_square": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "data": {
              "type": "string",
              "media": {
                "binaryEncoding": "base64"
              }
            }
          }
        },
        "logo_full": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "data": {
              "type": "string",
              "media": {
                "binaryEncoding": "base64"
              }
            }
          }
        }
      }
    },
    "webids": {
      "type": "object",
      "opencrypto-validation": "webid",
      "patternProperties": {
        "^[a-z0-9-]{2,20}(\\/[a-z0-9-]{2,20})?$": {
          "type": "string"
        }
      }
    },
    "resources": {
