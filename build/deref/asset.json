{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://schema.opencrypto.io/models/asset#",
  "title": "Asset",
  "description": "Cryptocurrency - digital asset (blockchain or token).",
  "type": "object",
  "required": [
    "name",
    "type"
  ],
  "properties": {
    "id": {
      "title": "ID",
      "description": "Unique identifier (to be written in small letters - for internal usage only).",
      "type": "string"
    },
    "type": {
      "title": "Type",
      "description": "Type of asset, eq. blockchain or token.",
      "type": "string",
      "enum": [
        "blockchain",
        "token"
      ]
    },
    "name": {
      "title": "Name",
      "description": "The official name of the asset.",
      "type": "string"
    },
    "symbol": {
      "title": "Symbol",
      "description": "One to nine characters (to be written in capital letters).",
      "type": "string"
    },
    "token_properties": {
      "type": "object",
      "title": "Token properties",
      "description": "Properties of token. Valid only for tokens.",
      "required": [
        "platform"
      ],
      "properties": {
        "platform": {
          "title": "Properties",
          "description": "Blockchain where the asset is being run.",
          "type": "string"
        },
        "contract_address": {
          "title": "Contract address",
          "description": "Contract address of the token.",
          "type": "string"
        },
        "decimals": {
          "title": "Decimals",
          "description": "The number of digits that come after the decimal place when displaying token values on screen (format number).",
          "type": "number"
        }
      }
    },
    "forked": {
      "type": "boolean",
      "title": "Is forked",
      "description": "Indicator if this asset was forked from another asset."
    },
    "fork_properties": {
      "type": "object",
      "title": "Fork properties",
      "properties": {
        "parent": {
          "title": "Parent asset",
          "description": "Asset from which was this asset forked.",
          "type": "string"
        },
        "block": {
          "title": "Block number",
          "description": "Number of first block which differs from parent.",
          "type": "number"
        },
        "time": {
          "title": "Fork timestamp",
          "description": "Date and time of first block.",
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "networks": {
      "type": "array",
      "items": {
        "$schema": "http://json-schema.org/draft-06/schema#",
        "$id": "https://schema.opencrypto.io/models/network#",
        "title": "Network",
        "description": "Ledger (blockchain) of digital asset.",
        "type": "object",
        "properties": {
          "id": {
            "title": "ID",
            "description": "Unique identifier (to be written in small letters - for internal usage only).",
            "type": "string"
          },
          "name": {
            "title": "Name",
            "description": "Name of the network (eg. Mainnet, Testnet, Rinkeby).",
            "type": "string"
          },
          "type": {
            "title": "Type",
            "description": "Type of Network (main, test).",
            "type": "string",
            "enum": [
              "main",
              "test"
            ]
          },
          "proof_type": {
            "title": "Proof Type",
            "description": "Proof type of the network (eg. PoW, PoS, Pow+PoS).",
            "type": "string"
          },
          "algorithm": {
            "title": "Algorithm",
            "description": "Algorithm that runs the network (eg. Sha-256, Cryptonight).",
            "type": "string"
          },
          "mineable": {
            "title": "Mineable",
            "description": "Mineable of the network (true / false)",
            "type": "boolean"
          },
          "target_block_time": {
            "title": "Target block time",
            "description": "Target block time in seconds (fromat number).",
            "type": "number"
          },
          "maximum_block_size": {
            "title": "Maximum block size",
            "description": "Maximum block size in bytes (format number).",
            "type": "number"
          },
          "web": {
            "title": "Web links",
            "description": "Webpages links.",
            "type": "array",
            "items": {
              "type": "string",
              "format": "url"
            }
          },
          "tools": {
            "title": "Tools",
            "description": "Tools for the asset network.",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "type": {
                  "title": "Type",
                  "desctiption": "Type of the tool (explorer, faucet, other).",
                  "type": "string",
                  "enum": [
                    "explorer",
                    "faucet",
                    "other"
                  ]
                },
                "url": {
                  "title": "URL",
                  "description": "URL of the tool (format https://).",
                  "type": "string",
                  "format": "url"
                }
              }
            }
          },
          "images": {
            "title": "Images",
            "desctiption": "Images of the logo.",
            "type": "object",
            "opencrypto-generated": true,
            "properties": {
              "logo_square": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string"
                  },
                  "data": {
                    "type": "string",
                    "media": {
                      "binaryEncoding": "base64"
                    }
                  }
                }
              },
              "logo_full": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string"
                  },
                  "data": {
                    "type": "string",
                    "media": {
                      "binaryEncoding": "base64"
                    }
                  }
                }
              }
            }
          },
          "webids": {
            "title": "WebIDs",
            "description": "Webs related to the project.",
            "type": "object",
            "opencrypto-validation": "webid",
            "patternProperties": {
              "^[a-z0-9-]{2,20}(\\/[a-z0-9-]{2,20})?$": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "max_supply": {
      "title": "Max supply",
      "description": "Maximum size of coins that will ever exist for a crypto currency (format number).",
      "type": "number"
    },
    "first_distribution": {
      "title": "First distribution",
      "description": "Amount and type of coins that were released before mining.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "title": "Title",
            "description": "The kind of the first distribution, eg. Premined / ICO parts / nothing, can be empty.",
            "type": "string"
          },
          "amount": {
            "title": "Amount",
            "desctiption": "Number of coins in that part (format number).",
            "type": "number"
          }
        }
      }
    },
    "ico_properties": {
      "title": "ICO properties",
      "description": "Information regarding to ICO (if there is).",
      "type": "object",
      "properties": {
        "start_date": {
          "title": "Start date",
          "description": "The date when ICO has started (format YYYY/MM/DD).",
          "type": "string",
          "format": "date"
        },
        "end_date": {
          "title": "End date",
          "description": "The date when ICO has ended (format YYYY/MM/DD).",
          "type": "string",
          "format": "date"
        },
        "total_cap": {
          "title": "Total cap",
          "description": "The total amount of the coins for ICO (format number).",
          "type": "number"
        },
        "ico_price": {
          "type": "string",
          "pattern": "^[0-9-\\.]+ [A-Z0-9]{2,4}$"
        },
        "raised": {
          "type": "string",
          "pattern": "^[0-9-\\.]+ [A-Z0-9]{2,4}$"
        },
        "country": {
          "title": "Country",
          "description": "Country where the ICO is settled.",
          "type": "string"
        }
      }
    },
    "denominations": {
      "title": "Denominations",
      "description": "Units and subunits of the asset amount.",
      "type": "object",
      "properties": {
        "plural": {
          "title": "Plural",
          "description": "The name of the denomination, in plural.",
          "type": "string"
        },
        "symbol": {
          "title": "Symbol",
          "description": "The symbol for the asset.",
          "type": "string"
        },
        "subunits": {
          "title": "Subunits",
          "description": "The subunits of the asset.",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "unit": {
                "title": "Unit",
                "description": "The subunits of the asset (format number).",
                "type": "number"
              },
              "name": {
                "title": "Name",
                "description": "Name of the denomination (eg. satoshi / lites / photons / litoshis ...).",
                "type": "string"
              }
            }
          }
        }
      }
    },
    "start_date": {
      "title": "Start Date",
      "description": "The day when the assets began to be first activated (format YYYY/MM/DD).",
      "type": "string",
      "format": "date"
    },
    "web": {
      "title": "Web links",
      "description": "Webpages links.",
      "type": "array",
      "items": {
        "type": "string",
        "format": "url"
      }
    },
    "team": {
      "title": "team",
      "description": "The team of the project.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "title": "Name",
            "desctiption": "Name and the surname of the team member.",
            "type": "string"
          },
          "role": {
            "title": "Role",
            "description": "Role in the team.",
            "type": "string"
          },
          "webids": {
            "title": "WebIDs",
            "description": "Webs related to the project.",
            "type": "object",
            "opencrypto-validation": "webid",
            "patternProperties": {
              "^[a-z0-9-]{2,20}(\\/[a-z0-9-]{2,20})?$": {
                "type": "string"
              }
            }
          },
          "photo": {
            "title": "Photo",
            "description": "Photo of the team member (format https://).",
            "type": "string",
            "format": "url"
          }
        }
      }
    },
    "team_url": {
      "title": "Team URL",
      "description": "URL of the team (format https://).",
      "type": "string",
      "format": "url"
    },
    "whitepapers": {
      "title": "Whitepapers",
      "description": "Whitepapers of the project.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "title": "Title",
            "description": "Name of the whitepaper.",
            "type": "string"
          },
          "url": {
            "title": "URL",
            "description": "URL link to the whitepaper in .pdf format (format https://).",
            "type": "string",
            "format": "url"
          }
        }
      }
    },
    "history": {
      "title": "History",
      "description": "History of the project, important events, happenings, facts.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "date": {
            "title": "Date",
            "description": "The date of the event (format YYYY/MM/DD).",
            "type": "string",
            "format": "date"
          },
          "title": {
            "title": "Title",
            "description": "Title of the event.",
            "type": "string"
          },
          "description": {
            "title": "Description",
            "description": "The short description of the event.",
            "type": "string"
          },
          "url": {
            "title": "URL",
            "description": "URL of the link with event information (format https://).",
            "type": "string",
            "format": "url"
          }
        }
      }
    },
    "images": {
      "title": "Images",
      "desctiption": "Images of the logo.",
      "type": "object",
      "opencrypto-generated": true,
      "properties": {
        "logo_square": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "data": {
              "type": "string",
              "media": {
                "binaryEncoding": "base64"
              }
            }
          }
        },
        "logo_full": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "data": {
              "type": "string",
              "media": {
                "binaryEncoding": "base64"
              }
            }
          }
        }
      }
    },
    "webids": {
      "title": "WebIDs",
      "description": "Webs related to the project.",
      "type": "object",
      "opencrypto-validation": "webid",
      "patternProperties": {
        "^[a-z0-9-]{2,20}(\\/[a-z0-9-]{2,20})?$": {
          "type": "string"
        }
      }
    },
    "resources": {
      "title": "Resources",
      "description": "Resources where other information about the project could be found.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "title": "Title",
            "description": "Name of the resources.",
            "type": "string"
          },
          "url": {
            "title": "URL",
            "description": "URL of the resources (format https://).",
            "type": "string",
            "format": "url"
          }
        }
      }
    },
    "partners": {
      "title": "Resources",
      "description": "Resources where other information about the project could be found.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "title": "Title",
            "description": "Name of the resources.",
            "type": "string"
          },
          "url": {
            "title": "URL",
            "description": "URL of the resources (format https://).",
            "type": "string",
            "format": "url"
          }
        }
      }
    },
    "tags": {
      "title": "Tags",
      "description": "Tags that could describe the project.",
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+(:[a-z0-9-]+)?$"
      }
    },
    "rt_data": {
      "type": "object",
      "opencrypto-generated": true,
      "properties": {
        "price": {
          "type": "object",
          "properties": {
            "usd": {
              "type": "number"
            },
            "btc": {
              "type": "number"
            }
          }
        },
        "prices": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "value": {
                "type": "number"
              },
              "bid": {
                "type": "number"
              },
              "ask": {
                "type": "number"
              },
              "base": {
                "type": "string"
              },
              "source": {
                "type": "string"
              },
              "time": {
                "type": "string"
              }
            }
          }
        },
        "marketcap": {
          "type": "object",
          "properties": {
            "usd": {
              "type": "number"
            },
            "btc": {
              "type": "number"
            }
          }
        },
        "marketcaps": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "value": {
                "type": "number"
              },
              "base": {
                "type": "string"
              },
              "source": {
                "type": "string"
              },
              "time": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}