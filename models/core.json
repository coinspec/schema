{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://schema.opencrypto.io/models/core#",
  "title": "Core",
  "definitions": {
    "webids": {
      "type": "object",
      "opencrypto-validation": "webid",
      "patternProperties": {
        "^[a-z0-9-]{2,20}(\\/[a-z0-9-]{2,20})?$": {
          "type": "string"
        }
      }
    },
    "links": {
      "oneof": [
        {
          "type": "string",
          "format": "url"
        },
        {
          "type": "array",
          "items": {
            "type": "string",
            "format": "url"
          }
        }
      ]
    },
    "person": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "role": {
          "type": "string"
        },
        "webids": {
          "$ref": "#/definitions/webids"
        },
        "photo": {
          "$ref": "#/definitions/links"
        }
      }
    },
    "file": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "data": {
          "type": "string",
          "media": {
            "binaryEncoding": "base64"
          }
        }
      }
    },
    "images": {
      "type": "object",
      "properties": {
        "logo_square": {
          "$ref": "#/definitions/file"
        },
        "logo_full": {
          "$ref": "#/definitions/file"
        }
      }
    },
    "team": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/person"
      }
    },
    "whitepapers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "url"
          }
        }
      }
    },
    "history": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "url": {
            "links": {
              "$ref": "#/definitions/links"
            }
          }
        }
      }
    },
    "price": {
      "type": "string",
      "pattern": "^[0-9-\\.]+ [A-Z0-9]{2,4}$"
    },
    "resources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "url"
          }
        }
      }
    },
    "contacts": {
      "type": "object",
      "patternProperties": {
        "^email(:.+)?$": {
          "type": "string",
          "format": "email"
        },
        "^phone(:.+)?$": {
          "type": "string"
        },
        "^location(:.+)?$": {
          "type": "string"
        }
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+(:[a-z0-9-]+)?$"
      }
    },
    "tools": {
      "type": "array",
      "items": {
        "properties": {
          "title": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "explorer",
              "faucet",
              "other"
            ]
          },
          "url": {
            "$ref": "#/definitions/links"
          }
        }
      }
    }
  }
}
