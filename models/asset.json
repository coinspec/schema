{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://schema.opencrypto.io/models/asset#",
  "title": "Asset",
  "description": "Digital assets or coins & tokens.",
  "type": "object",
  "required": [
    "name"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "symbol": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "coin",
        "token"
      ]
    },
    "name": {
      "title": "Name",
      "type": "string"
    },
    "start_date": {
      "title": "Start Date",
      "type": "string",
      "format": "date"
    },
    "proof_type": {
      "title": "Proof Type",
      "type": "string"
    },
    "web": {
      "$ref": "#/definitions/links"
    },
    "mineable": {
      "type": "boolean"
    },
    "denominations": {
      "type": "object",
      "properties": {
        "plural": {
          "type": "string"
        },
        "symbol": {
          "type": "string"
        },
        "subunits": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "unit": {
                "type": "number"
              },
              "name": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "team": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/person"
      }
    },
    "whitepaper": {
      "type": "string",
      "format": "url"
    },
    "webids": {
      "$ref": "#/definitions/webids"
    },
    "resources": {
      "type": "object",
      "properties": {
        "message_board": {
          "$ref": "#/definitions/links"
        },
        "announcement": {
          "$ref": "#/definitions/links"
        }
      }
    },
    "tools": {
      "type": "object",
      "properties": {
        "explorer": {
          "$ref": "#/definitions/links"
        }
      }
    },
    "images": {
      "type": "object",
      "properties": {
        "logo_square": {
          "$ref": "#/definitions/file"
        },
        "logo_full": {
          "$ref": "#/definitions/file"
        }
      }
    },
    "networks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "main",
              "test"
            ]
          }
        }
      }
    },
    "rt_data": {
      "type": "object",
      "properties": {
        "price": {
          "type": "object",
          "properties": {
            "usd": {
              "type": "number"
            },
            "btc": {
              "type": "number"
            }
          }
        },
        "prices": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "value": {
                "type": "number"
              },
              "bid": {
                "type": "number"
              },
              "ask": {
                "type": "number"
              },
              "base": {
                "type": "string"
              },
              "source": {
                "type": "string"
              },
              "time": {
                "type": "string"
              }
            }
          }
        },
        "marketcap": {
          "type": "object",
          "properties": {
            "usd": {
              "type": "number"
            },
            "btc": {
              "type": "number"
            }
          }
        },
        "marketcaps": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "value": {
                "type": "number"
              },
              "base": {
                "type": "string"
              },
              "source": {
                "type": "string"
              },
              "time": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "webids": {
      "type": "object"
    },
    "file": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "data": {
          "type": "string",
          "media": {
            "binaryEncoding": "base64"
          }
        }
      }
    },
    "links": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "url"
      }
    },
    "person": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "role": {
          "type": "string"
        },
        "webids": {
          "$ref": "#/definitions/webids"
        }
      }
    }
  }
}
