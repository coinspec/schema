{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://schema.opencrypto.io/models/asset#",
  "title": "Asset",
  "description": "Cryptocurrency - digital asset (coin or token).",
  "type": "object",
  "required": [
    "name"
  ],
  "properties": {
    "id": {
      "title": "ID",
      "description": "Unique identifier.",
      "type": "string"
    },
    "symbol": {
      "title": "Symbol",
      "description": "Three or four letter symbol.",
      "type": "string"
    },
    "name": {
      "title": "Name",
      "description": "Official name.",
      "type": "string"
    },
    "type": {
      "title": "Type",
      "description": "Type of asset, eq. coin or token.",
      "type": "string",
      "enum": [
        "coin",
        "token"
      ]
    },
    "start_date": {
      "title": "Start Date",
      "description": "The day when the project began to be first published.",
      "type": "string",
      "format": "date"
    },
    "web": {
      "title": "Web links",
      "description": "Webpages links.",
      "$ref": "https://schema.opencrypto.io/models/core#/definitions/links"
    },
    "denominations": {
      "title": "Denominations",
      "description": "Units and subunits of the asset amount.",
      "type": "object",
      "properties": {
        "plural": {
          "type": "string"
        },
        "symbol": {
          "type": "string"
        },
        "subunits": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "unit": {
                "type": "number"
              },
              "name": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "team": {
      "type": "array",
      "items": {
        "$ref": "https://schema.opencrypto.io/models/core#/definitions/person"
      }
    },
    "whitepaper": {
      "type": "string",
      "format": "url"
    },
    "webids": {
      "$ref": "https://schema.opencrypto.io/models/core#/definitions/webids"
    },
    "resources": {
      "type": "object",
      "properties": {
        "message_board": {
          "$ref": "https://schema.opencrypto.io/models/core#/definitions/links"
        },
        "announcement": {
          "$ref": "https://schema.opencrypto.io/models/core#/definitions/links"
        }
      }
    },
    "tools": {
      "type": "object",
      "properties": {
        "explorer": {
          "$ref": "https://schema.opencrypto.io/models/core#/definitions/links"
        }
      }
    },
    "images": {
      "$ref": "https://schema.opencrypto.io/models/core#/definitions/images"
    },
    "networks": {
      "type": "array",
      "items": {
        "$ref": "https://schema.opencrypto.io/models/network#"
      }
    },
    "history": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "rt_data": {
      "type": "object",
      "properties": {
        "price": {
          "type": "object",
          "properties": {
            "usd": {
              "type": "number"
            },
            "btc": {
              "type": "number"
            }
          }
        },
        "prices": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "value": {
                "type": "number"
              },
              "bid": {
                "type": "number"
              },
              "ask": {
                "type": "number"
              },
              "base": {
                "type": "string"
              },
              "source": {
                "type": "string"
              },
              "time": {
                "type": "string"
              }
            }
          }
        },
        "marketcap": {
          "type": "object",
          "properties": {
            "usd": {
              "type": "number"
            },
            "btc": {
              "type": "number"
            }
          }
        },
        "marketcaps": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "value": {
                "type": "number"
              },
              "base": {
                "type": "string"
              },
              "source": {
                "type": "string"
              },
              "time": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
