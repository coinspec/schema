{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://schema.opencrypto.io/models/asset#",
  "title": "Asset",
  "description": "Cryptocurrency - digital asset (blockchain or token).",
  "type": "object",
  "required": [
    "name",
    "type"
  ],
  "properties": {
    "id": {
      "title": "ID",
      "description": "Unique identifier.",
      "type": "string"
    },
    "type": {
      "title": "Type",
      "description": "Type of asset, eq. blockchain or token.",
      "type": "string",
      "enum": [
        "blockchain",
        "token"
      ]
    },
    "name": {
      "title": "Name",
      "description": "Official name.",
      "type": "string"
    },
    "symbol": {
      "title": "Symbol",
      "description": "Three or four letter symbol.",
      "type": "string"
    },
    "token_properties": {
      "type": "object",
      "title": "Token properties",
      "required": [
        "platform"
      ],
      "properties": {
        "platform": {
          "type": "string"
        },
        "contract_address": {
          "type": "string"
        },
        "decimals": {
          "type": "number"
        }
      }
    },
    "networks": {
      "title": "Networks",
      "type": "array",
      "items": {
        "$ref": "https://schema.opencrypto.io/models/network#/"
      }
    },
    "max_supply": {
      "type": "number"
    },
    "first_distribution": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "amount": {
            "type": "number"
          }
        }
      }
    },
    "ico_properties": {
      "type": "object",
      "properties": {
        "start_date": {
          "type": "string",
          "format": "date"
        },
        "end_date": {
          "type": "string",
          "format": "date"
        },
        "total_cap": {
          "type": "number"
        },
        "ico_price": {
          "$ref": "https://schema.opencrypto.io/models/core#/definitions/price"
        },
        "raised": {
          "$ref": "https://schema.opencrypto.io/models/core#/definitions/price"
        },
        "country": {
          "type": "string"
        }
      }
    },
    "denominations": {
      "title": "Denominations",
      "description": "Units and subunits of the asset amount.",
      "type": "object",
      "properties": {
        "plural": {
          "type": "string"
        },
        "symbol": {
          "type": "string"
        },
        "subunits": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "unit": {
                "type": "number"
              },
              "name": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "start_date": {
      "title": "Start Date",
      "description": "The day when the assets began to be first activated.",
      "type": "string",
      "format": "date"
    },
    "web": {
      "$ref": "https://schema.opencrypto.io/models/core#/definitions/links"
    },
    "team": {
      "$ref": "https://schema.opencrypto.io/models/core#/definitions/team"
    },
    "team_url": {
      "type": "string",
      "format": "url"
    },
    "whitepapers": {
      "$ref": "https://schema.opencrypto.io/models/core#/definitions/whitepapers"
    },
    "history": {
      "$ref": "https://schema.opencrypto.io/models/core#/definitions/history"
    },
    "images": {
      "$ref": "https://schema.opencrypto.io/models/core#/definitions/images"
    },
    "webids": {
      "$ref": "https://schema.opencrypto.io/models/core#/definitions/webids"
    },
    "resources": {
      "$ref": "https://schema.opencrypto.io/models/core#/definitions/resources"
    },
    "partners": {
      "$ref": "https://schema.opencrypto.io/models/core#/definitions/resources"
    },
    "tags": {
      "$ref": "https://schema.opencrypto.io/models/core#/definitions/tags"
    },
    "rt_data": {
      "type": "object",
      "opencrypto-generated": true,
      "properties": {
        "price": {
          "type": "object",
          "properties": {
            "usd": {
              "type": "number"
            },
            "btc": {
              "type": "number"
            }
          }
        },
        "prices": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "value": {
                "type": "number"
              },
              "bid": {
                "type": "number"
              },
              "ask": {
                "type": "number"
              },
              "base": {
                "type": "string"
              },
              "source": {
                "type": "string"
              },
              "time": {
                "type": "string"
              }
            }
          }
        },
        "marketcap": {
          "type": "object",
          "properties": {
            "usd": {
              "type": "number"
            },
            "btc": {
              "type": "number"
            }
          }
        },
        "marketcaps": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "value": {
                "type": "number"
              },
              "base": {
                "type": "string"
              },
              "source": {
                "type": "string"
              },
              "time": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
