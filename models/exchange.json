{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://schema.opencrypto.io/models/exchange#",
  "title": "Exchange",
  "type": "object",
  "required": [
    "name"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "title": "Name",
      "type": "string"
    },
    "countries": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^(\\w){2}$"
      }
    },
    "web": {
      "$ref": "#/definitions/links"
    },
    "api": {
      "url": {
        "$ref": "#/definitions/links"
      }
    },
    "markets": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "definitions": {
    "links": {
      "oneof": [
        {
          "type": "string",
          "format": "url"
        },
        {
          "type": "array",
          "items": {
            "type": "string",
            "format": "url"
          }
        }
      ]
    }
  }
}
