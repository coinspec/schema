{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://schema.opencrypto.io/models/network#",
  "title": "Network",
  "description": "Ledger (blockchain) of digital asset.",
  "type": "object",
  "properties": {
    "id": {
      "title": "ID",
      "type": "string"
    },
    "name": {
      "title": "Name",
      "type": "string"
    },
    "type": {
      "title": "Type",
      "description": "Type of Network",
      "type": "string",
      "enum": [
        "main",
        "test"
      ]
    },
    "proof_type": {
      "title": "Proof Type",
      "type": "string"
    },
    "mineable": {
      "type": "boolean"
    }
  }
}
