{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://schema.opencrypto.io/models/network#",
  "title": "Network",
  "description": "Ledger (blockchain) of digital asset.",
  "type": "object",
  "properties": {
    "id": {
      "title": "ID",
      "type": "string"
    },
    "name": {
      "title": "Name",
      "type": "string"
    },
    "type": {
      "title": "Type",
      "description": "Type of Network",
      "type": "string",
      "enum": [
        "main",
        "test"
      ]
    },
    "proof_type": {
      "title": "Proof Type",
      "type": "string"
    },
    "algorithm": {
      "type": "string"
    },
    "mineable": {
      "type": "boolean"
    },
    "target_block_time": {
      "name": "Target block time (in seconds)",
      "type": "number"
    },
    "maximum_block_size": {
      "name": "Maximum block size (in bytes)",
      "type": "number"
    },
    "tools": {
      "$ref": "https://schema.opencrypto.io/models/core#/definitions/tools"
    },
    "images": {
      "$ref": "https://schema.opencrypto.io/models/core#/definitions/images"
    }
  }
}
